                <ResourceDictionary Source="pack://application:,,,/MemoryClient;component/Themes/CheckBox.Default.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MemoryClient;component/Themes/ComboBox.Default.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MemoryClient;component/Themes/Buttons.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>

    </Application.Resources>
</Application>
